{
    "name": "mix-code/jawaly-sms",
    "description": "Laravel and PHP package to send SMS notifications using the 4jawaly SMS API gateway.",
    "keywords": [
        "mix-code",
        "4jawaly",
        "sms",
        "laravel",
        "php",
        "api",
        "gateway",
        "messaging",
        "notification",
        "text-message",
        "sms-integration",
        "4jawaly-sms"
    ],
    "homepage": "https://github.com/mix-code/jawaly-sms",
    "license": "MIT",
    "support": {
        "email": "mixcode2025@gmail.com",
        "issues": "https://github.com/mix-code/jawaly-sms/issues",
        "source": "https://github.com/mix-code/jawaly-sms"
    },
    "authors": [
        {
            "name": "MixCode",
            "email": "mixcode2025@gmail.com",
            "role": "Company"
        },
        {
            "name": "Mohamed Alaa El-Din",
            "email": "moaalaa16@gmail.com",
            "role": "Developer"
        },
        {
            "name": "Hamza Omar Mohamed",
            "email": "hamzalilomar92@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "spatie/laravel-package-tools": "^1.92"
    },
    "require-dev": {
        "laravel/pint": "^1.0",
        "orchestra/testbench": "^9.15",
        "pestphp/pest": "^2.1",
        "pestphp/pest-plugin-arch": "^2.0",
        "pestphp/pest-plugin-laravel": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "MixCode\\JawalySms\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MixCode\\JawalySms\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "MixCode\\JawalySms\\JawalySmsServiceProvider"
            ]
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
